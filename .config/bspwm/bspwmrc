#!/bin/bash

sxhkd &
# Compositor
compton &
# Wallpaper
nitrogen --restore &
# Paineis
~/.config/polybar/launch.sh
# Carrega arquivo de configuração X e carrega o tema de cursor.
xrdb ~/.Xresources
xsetroot -cursor_name left_ptr
# Mapa de teclado brasileiro
setxkbmap -model abnt2 -layout br -variant abnt2 
# Polkit
/usr/libexec/polkit-gnome-authentication-agent-1 &
# Ajuste de temperatura da cor da tela
redshift-gtk &
# Plugin que desabilita escurecimento de tela
# Update 08/04/2018: Adicionado o || para o uso em maquinas diferentes,
# caffeine-indicator é usado no archlinux e caffeine no manjaro.
caffeine-indicator || caffeine &
# Thunar Daemom 
thunar --daemon &
# Notification Daemon
dunst &
# Welcome
dunstify "Bem Vindo $USER!" 
# Auto lockscreen
xautolock -time 15 -locker 'betterlockscreen -l' & 

bspc monitor eDP1  -d I II III IV V VI VII VIII IX X
#bspc monitor HDMI1 -d VI VII VIII IX X

#bspc config click_to_focus true
bspc config pointer_modifier mod4 # Super key to mouse actions
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner

bspc config focus_follows_pointer true
bspc config border_width         4
bspc config window_gap          12

#bspc config remove_disabled_monitors true
#bspc config remove_unplugged_monitors true

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config normal_border_color "#FFFFFF"
bspc config active_border_color "#556B2F"
bspc config focused_border_color "#00FF7F"
bspc config presel_border_color "#18fe64"
bspc config urgent_border_color "#FF4500"
bspc config presel_feedback_color "#18fe64"

bspc rule -a '*:libreoffice' state=tiled
bspc rule -a '*:soffice' state=floating 

bspc rule -a Zathura state=tiled
# Fix Java Windows
export _JAVA_AWT_WM_NONREPARENTING=1
