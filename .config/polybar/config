[module/clock]
type = internal/date
interval = 1
#date = " %d-%m-%Y "
#date-alt = " %d-%m-%Y "
time = %H:%M:%S 
time-alt = %H:%M

format = " <label>"
format-suffix = "  "
format-suffix-foreground = ${self.format-underline}
format-foreground = ${colors.foreground}
format-underline = ${colors.SpringGreen}

label = %time%
label-font = 10

##################################################################

[module/calendar]
