[bar/seraphybr]
; Use the following command to list available outputs:
; If unspecified, the application will pick the first one it finds.
; $ xrandr -q | grep " connected" | cut -d ' ' -f1
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 28
#offset-x = 1%
#offset-y = 1%

fixed-center = true
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 3
overline-size = 3


border-size = 3
border-color = ${colors.background}

padding-left = 0
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = Book:pixelsize=12;1
font-1 = FontAwesome:pixelsize=13;1
font-2 = MaterialIcons:pixelsize=13;1

modules-left = my-text-label bspwm
#modules-center =
modules-right = volume backlight-acpi gmail bbswitch_show memory cpu temperature bluetooth wireless-network  date battery


# tray-position =
#tray-padding = 2
#tray-transparent = true
;tray-background = #0063ff
;override-redirect = true

