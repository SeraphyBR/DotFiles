content-foreground = ${colors.white}
content-underline = ${colors.white}


################################################################################

[module/bbswitch_show]
type = custom/script
interval = 1
format = " <label> "
format-prefix = " "
format-underline = ${colors.chartreuse}
click-left = "optirun -b none nvidia-settings -c :8"
exec = ~/.config/polybar/bbswitch.sh

