[colors]
# Para transparencia usa-se o padrão RGBA ou AARRGGBB (Nesse arquivo de configuração) .
# Segue a tabela com os valores HEX para AA, de acordo com o nivel de transparencia.
# 100% — FF
# 95% — F2
# 90% — E6
# 85% — D9
# 80% — CC
# 75% — BF
# 70% — B3
# 65% — A6
# 60% — 99
# 55% — 8C
# 50% — 80
# 45% — 73
# 40% — 66
# 35% — 59
# 30% — 4D
# 25% — 40
# 20% — 33
# 15% — 26
# 10% — 1A
# 5% — 0D
# 0% — 00

## Colors: Red, Orange, Yellow... [Hot colors]:

Orange1 = #fba922
Crimson = #DC143C
Yellow = #FFFF00
OrangeRed = #FF4500
Gold = #FFD700
Red = #FF0000

## Colors: Blue, Green and Brown:

blue = #0000FF
DeepSkyBlue = #00BFFF
SteelBlue = #4682B4

violet = #9400D3

green2 = #253d2d
chartreuse = #7FFF00
SpringGreen = #00FF7F
DarkOliveGreen = #556B2F

SaddleBrown = #8B4513

## White, Black and Gray:

TrueBlack = #000000
Black = #222
DarkSlateGray = #2F2828
GitHubBlack = #24292e
DimGray = #696969
DavysGrey = #555
white = #FFFFFF

#### General Colors:

background = ${self.GitHubBlack}
background-alt = #73444444
border = ${self.background}
foreground = ${self.white}
foreground-alt = #ffffff
primary = #00FF00
secondary = #006400
alert = ${self.Red}

