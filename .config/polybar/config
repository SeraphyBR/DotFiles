[module/powermenu]
type = custom/menu

format-spacing = 1
format-underline =  #ffa707

label-open = "%{T3}%{F#ffa707}  %{F-}%{T-} "
label-close = "  "
label-close-foreground = ${colors.OrangeRed}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = "  "
menu-0-0-exec = menu-open-1

menu-0-1 = "  "
menu-0-1-exec = menu-open-2

menu-0-2 = "  "
menu-0-2-exec = menu-open-3

menu-0-3 =  "  " 
menu-0-3-exec = betterlockscreen -l

menu-0-4 = "  |"
menu-0-4-exec = bspc quit

menu-1-0 = Reiniciar 
menu-1-0-exec = sudo shutdown -r now 

menu-1-1 =  |
menu-1-1-exec = menu-open-0

menu-2-0 = Desligar
menu-2-0-exec = sudo shutdown -h now

menu-2-1 =  |
menu-2-1-exec = menu-open-0

menu-3-0 = Suspender
menu-3-0-exec = betterlockscreen -s 

menu-3-1 =  |
menu-3-1-exec = menu-open-0

