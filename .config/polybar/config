[module/gmail]
type = custom/script
exec = ~/.config/polybar/Scripts/gmail/launch.py --color '#00FF7F'
tail = true
click-left = xdg-open https://mail.google.com

##############################################################################

[module/bluetooth]
type = custom/script
interval = 5
format-underline = ${colors.DeepSkyBlue}
format-foreground = ${colors.DeepSkyBlue}
exec = ~/.config/polybar/Scripts/bluetooth.sh
click-left = "gksudo bluetooth toggle"

###############################################################################

[module/mocp]
type = custom/script
interval = 1.5

format = <label>
label-maxlen = 40
format-prefix = "  "
format-suffix = "  "
format-prefix-foreground = ${colors.Orange1}
format-suffix-foreground = ${colors.Orange1}
format-underline = ${colors.Orange1}
exec = ~/.config/polybar/Scripts/player-moc.sh

click-left = mocp -f
click-right = mocp -r
click-middle = mocp -G

#############################################################################

[module/spotify]
type = custom/script
interval = 1.5
format-prefix = "  "
format-suffix = "  "
format-prefix-foreground = #1db954
format-suffix-foreground = #1db954
format = <label>
exec = python ~/.config/polybar/Scripts/spotify_status.py -t 32

click-left = playerctl next
click-right = playerctl previous
click-middle = playerctl play-pause && notify-send -u low "Spotify: $(playerctl status)"

format-underline = #1db954
###############################################################################

[module/xbacklight]
